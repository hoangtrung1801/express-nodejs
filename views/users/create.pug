extends ../header/header.pug

block content

	h1 Create User
	
	if errors 
		each error in errors 
			.alert.alert-danger= error


	form(action="/users/create" method="POST" enctype="multipart/form-data")
		.form-group
			label(for="name") Name
			input#name.form-control(type="text", placeholder="Name", name="name", value=value ? value.name : '')
		.form-group
			label(for="password") Password
			input#password.form-control(type="password", placeholder="Password", name="password", value=value ? value.password : '')
		.form-group
			label(for="phone") Phone
			input#phone.form-control(type="text", placeholder="Phone", name="phone", value=value ? value.phone : '')
		.form-group
			label(for="avatar") Avatar
			input#avatar.form-control-file(type="file", name="avatar")
		button.btn.btn-primary(type='submit' ) Create